@model IndexViewModel
@{
    ViewData["Title"] = "CharlieBank";
}

<div>
    @foreach (var customer in Model.Customers)
    {
        <div style="border:2px solid black; width: 300px; display:inline-block;">
            <h5>Namn: @customer.Name</h5>
            <p>Kundnummer: @customer.CustomerNumber</p>
            <p>Konton: </p>
            <div style="border:1px solid black">
                @foreach (var account in customer.CustomerAccounts)
                {
                    <h6>Kontonummer: @account.AccountNumber</h6>
                    <p>Saldo: @account.Balance</p>
                }
            </div>
        </div>
    }
</div>